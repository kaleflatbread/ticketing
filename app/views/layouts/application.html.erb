<!DOCTYPE html>
<html>
  <head>
    <title>Ticketing</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Inconsolata|Quicksand|Raleway" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <ul class="header-menu">
      <% if logged_in? %>
        <li>
          <%= link_to logged_in_employee.name, employee_path(logged_in_employee) %> is logged in!
          <%= button_to "Logout", destroy_session_path, method: :delete %>
        </li>
      <% else %>
        <li>
          <%= link_to "Register", '/employees/new' %>
        </li>
        <li>
          <%= link_to "Login", new_session_path %>
        </li>
      <% end %>
      </ul>
      <h1>Ticketing</h1>
    </header>
    <main><%= yield %></main>
  </body>
</html>
