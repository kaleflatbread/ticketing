<h1 class="page-headline">Project Name: <%= @project.name.titleize %></h1>

<h3 class="page-subhead">Tickets</h3>

<h3 class="list-head">Open:</h3>
    <ul>
      <% @project.tickets.each do |ticket| %>
        <% if ticket.complete == false %>
        <li class="list-item"><%= link_to ticket.name.titleize, ticket %> is due on <%= ticket.due_date.strftime("%m/%d/%Y") %></li>
        <% end %>
      <% end %>
    </ul>


<h3 class="list-head">Closed:</h3>
<ul>
  <% @project.tickets.each do |ticket| %>
  <% if ticket.complete == true %>
    <li class="list-item"><%= link_to ticket.name.titleize, ticket %></li>
    <% end %>
  <% end %>
</ul>

<br>

<button class="ui button"><a href="<%= new_ticket_path %>">New Ticket</a></button>
